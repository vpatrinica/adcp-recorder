# Include additional files in source distribution
include README.md
include LICENSE
include CHANGELOG.md
include PYPI_TODO.md
include pyproject.toml

# Include documentation
recursive-include docs *.md
recursive-include docs *.png
recursive-include docs *.jpg

# Include templates
recursive-include adcp_recorder/templates *.service
recursive-include adcp_recorder/templates *.ps1

# Include scripts
recursive-include scripts *.sh
recursive-include scripts *.bat
recursive-include scripts *.ps1

# Exclude unnecessary files
exclude .gitignore
exclude .coveragerc
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude adcp_recorder/tests *
recursive-exclude htmlcov *
recursive-exclude .pytest_cache *
recursive-exclude .ruff_cache *
